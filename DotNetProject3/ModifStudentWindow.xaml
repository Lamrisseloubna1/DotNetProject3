                <RadialGradientBrush>
                    <GradientStop Color="#FFC8B2B2" Offset="0.253"/>
                    <GradientStop Color="#FFCB1D36" Offset="1"/>
                    <GradientStop Color="#FFBEAEAE" Offset="0.006"/>
                </RadialGradientBrush>
            </Button.Background>
            <Button.FocusVisualStyle>
                <Style/>
            </Button.FocusVisualStyle>
            <Button.Style>
                <Style/>
            </Button.Style>
        </Button>
        <Button Content="Cancel" RenderTransformOrigin="0.328,0.278" Click="Button_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50" Margin="0,0,134,51"/>
        <Label Content="Fenêtre de modifications des informations des étudiants:&#xD;&#xA;" Margin="125,0,125,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="DarkRed"/>

